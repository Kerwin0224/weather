.container {
  padding: 20rpx;
  background-color: #f0f2f5;
  min-height: 100vh;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  border: none;
}

.city-list {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.city-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 32rpx;
}

.city-item:last-child {
  border-bottom: none;
}